.right{
    background-color: red;
    height: inherit;
    width: 65px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .box {
    width: 100%;
    height: 200rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    background-color: #f0f0f0;
    display: flex;
    padding: 10rpx;
    box-sizing: border-box;
  }
  
  .image {
    width: 120rpx;
    height: 120rpx;
    margin-top: 20rpx;
  }
  
  .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 10rpx;
  }
  
  .name {
    font-size: 40rpx;
    margin-left: 50rpx;
    text-align: left;
  }
  
  .description {
    font-size: 30rpx;
    color: #666666;
    text-align: right;
    margin-top: 60rpx;
    margin-right: 30rpx;
  }
  